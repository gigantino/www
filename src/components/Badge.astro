---
import { Icon } from "astro-icon";

interface Props {
  type: "spotify" | "obsidian" | "neovim" | "nuxt" | "typescript";
  href: string;
}

const { type, href } = Astro.props;
---

<a
  class="inline-flex items-center gap-1 rounded border border-zinc-200 bg-zinc-50 p-1 text-sm leading-4 text-neutral-900 no-underline dark:border-zinc-700 dark:bg-zinc-800 dark:text-zinc-100"
  href={href}
>
  <Icon name={type} class="h-3 w-3" />
  <!-- <img src={icon} alt={type} class="not-prose w-3" width="13px" height="13px" /> -->
  <span class="capitalize">{type}</span>
</a>
