---
import { Icon } from "astro-icon";
interface Props {
  href?: string;
  title?: string;
  description?: string;
}

const { title, description, href } = Astro.props;
---

<a
  class="group flex w-full justify-between gap-2 rounded border bg-zinc-50 px-3 py-4 text-gray-900 dark:border-zinc-700 dark:bg-zinc-800 dark:text-white"
  href={href}
>
  <div class="flex flex-col">
    <p class="flex items-center gap-1 font-bold group-hover:underline">
      {title}
    </p>
    <p class="text-zinc-600 dark:text-zinc-300">
      {description}
    </p>
  </div>
  <Icon name="external-link" class="w-5 flex-shrink-0" />
</a>
